<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>

  <class 
      name="org.sakaiproject.component.app.messageforums.dao.hibernate.ActorPermissionsImpl" 
      table="MFR_ACTOR_PERMISSIONS_T" 
      optimistic-lock="version">

    <id name="id">
      <column name="ID" not-null="true" length="19" />
      <generator class="native">
        <param name="sequence">MFR_ACTOR_PERMISSIONS_S</param>
      </generator>
    </id>

	<!--  Version number used for optimistic locking -->
    <version name="version" column="VERSION" />

    <!-- Actor Permissions fields -->
	<list name="accessors" lazy="true" table="MFR_MESSAGE_FORUMS_USER_T" cascade="all">
	    <key column="apaSurrogateKey"/>
	    <index column="ap1_index_col" />
	    <one-to-many class="org.sakaiproject.component.app.messageforums.dao.hibernate.MessageForumsUserImpl" />
	</list>     
	<list name="moderators" lazy="true" table="MFR_MESSAGE_FORUMS_USER_T" cascade="all">
	    <key column="apmSurrogateKey"/>
	    <index column="ap2_index_col" />
	    <one-to-many class="org.sakaiproject.component.app.messageforums.dao.hibernate.MessageForumsUserImpl" />
	</list>
	<list name="contributors" lazy="true" table="MFR_MESSAGE_FORUMS_USER_T" cascade="all">
	    <key column="apcSurrogateKey"/>
	    <index column="ap3_index_col" />
	    <one-to-many class="org.sakaiproject.component.app.messageforums.dao.hibernate.MessageForumsUserImpl" />
	</list>     

  </class>

</hibernate-mapping>
